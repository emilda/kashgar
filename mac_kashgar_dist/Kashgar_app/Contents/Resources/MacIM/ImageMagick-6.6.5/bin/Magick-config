#!/bin/sh
#
# Configure options script for re-calling MagickCore compilation options
# required to use the MagickCore library.
#

prefix=$MAGICK_HOME
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include/ImageMagick

usage="\
Usage: Magick-config [--cflags] [--cppflags] [--exec-prefix] [--ldflags] [--libs] [--prefix] [--version]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      echo "Example: gcc \`Magick-config --cflags --cppflags\` -o core core.c \`Magick-config --ldflags --libs\`" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac
  case $1 in
    --prefix=*)
      prefix=$optarg
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo '6.6.5 Q16 '
      ;;
    --cflags)
      echo "-I${includedir} -fopenmp"
      ;;
    --cxxflags)
      echo '-g -O2 -D_THREAD_SAFE -pthread'
      ;;
    --cppflags)
      echo '-I$MAGICK_HOME/include/ImageMagick'
      ;;
    --ldflags)
      echo '-L$MAGICK_HOME/lib -L$MAGICK_HOME-10/jpeg/.libs -L$MAGICK_HOME-10/jpeg -L$MAGICK_HOME-10/lcms/src/.libs -L$MAGICK_HOME-10/lcms/src -L$MAGICK_HOME-10/magick -L$MAGICK_HOME-10/png/.libs -L$MAGICK_HOME-10/png -L$MAGICK_HOME-10/tiff/libtiff/.libs -L$MAGICK_HOME-10/tiff/libtiff -L$MAGICK_HOME-10/ttf/objs/.libs -L$MAGICK_HOME-10/ttf/objs -L$MAGICK_HOME-10/wand -L$MAGICK_HOME-10/wmf/src/.libs -L$MAGICK_HOME-10/wmf/src -L$MAGICK_HOME-10/xml/.libs -L$MAGICK_HOME-10/xml -L/usr/X11/lib -R/usr/X11/lib'
      ;;
    --libs)
      echo "-L${libdir} -lMagickCore -llcms -ltiff -lfreetype -ljpeg -lpng -lXext -lXt -lSM -lICE -lX11 -lbz2 -lxml2 -lz -lm -lgomp -lclparser -framework OpenCL -L/System/Library/Frameworks/OpenCL.framework/Versions/A/Libraries -lm -lpthread "
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
